{{!
    @template mod_studentquiz/comment

    Template for rendering comment  for in comment area type of studentquiz.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none
}}
<div class="studentquiz-comment-post {{#iscreator}}fromcreator{{/iscreator}}" id="post{{id}}" data-id="{{id}}">
    <span id="c{{id}}" data-deleted="{{ deleted }}" data-numberofreply="{{numberofreply}}" data-authorid="{{authorid}}"
          {{#ispost}}data-replies="{{repliesstring}}"{{/ispost}}
    ></span>
    {{#deleted}}
        {{#canviewdeleted}}
            <div class="studentquiz-comment-post-outerbox">
                <div class="studentquiz-comment-author">
                    <span class="studentquiz-comment-postdate">{{posttime}}</span>
                    <span> | </span>
                    <a class="studentquiz-comment-author-profile" href="{{authorprofile}}">{{authorname}}</a>
                    {{#ispost}}
                        {{#expanded}}
                            <a class="studentquiz-comment-collapselink" href="#" title="{{#str}} collapsecomment, mod_studentquiz {{/str}}">
                                {{#pix}}switch_minus, mod_studentquiz, {{#str}} collapsecomment, mod_studentquiz {{/str}}{{/pix}}
                            </a>
                            <a class="studentquiz-comment-expandlink" href="#" style="display: none" title="{{#str}} expandcomment, mod_studentquiz {{/str}}">
                                {{#pix}}switch_plus, mod_studentquiz, {{#str}} expandcomment, mod_studentquiz {{/str}}{{/pix}}
                            </a>
                        {{/expanded}}
                        {{^expanded}}
                            <a class="studentquiz-comment-expandlink" href="#" title="{{#str}} expandcomment, mod_studentquiz {{/str}}">
                                {{#pix}}switch_plus, mod_studentquiz, {{#str}} expandcomment, mod_studentquiz {{/str}}{{/pix}}
                            </a>
                        {{/expanded}}
                    {{/ispost}}
                </div>
                <div class="studentquiz-comment-text-deleted">
                    <div class="studentquiz-comment-delete-info">
                        <strong>{{#str}} deletedcomment, mod_studentquiz{{/str}}</strong>
                        {{#str}}
                            deletedbyuser, mod_studentquiz, {
                                "user": {{# quote }} <a href='{{deleteuser.profileurl}}'>{{deleteuser.firstname}} {{deleteuser.lastname}}</a> {{/ quote }},
                                "date": {{# quote }}{{ deletedtime }}{{/ quote }}
                            }
                        {{/str}}
                    </div>
                    <div class="studentquiz-comment-delete-content">
                        {{#expanded}}
                            {{{content}}}
                        {{/expanded}}
                        {{^expanded}}
                            {{{shortcontent}}}
                        {{/expanded}}
                    </div>
                </div>
                <div class="studentquiz-comment-postfooter">
                    <div class="studentquiz-comment-commands-box">
                        {{#ispost}}
                            <div class="studentquiz-comment-totalreply">
                                <span class="studentquiz-comment-count-number">
                                    {{numberofreply}}
                                </span>
                                <span class="studentquiz-comment-count-text">
                                    {{#plural}}
                                        {{#str}} replies, mod_studentquiz {{/str}}
                                    {{/plural}}
                                    {{^plural}}
                                        {{#str}} reply, mod_studentquiz {{/str}}
                                    {{/plural}}
                                </span>
                            </div>
                        {{/ispost}}
                    </div>
                </div>
                <div class="studentquiz-comment-endpost"></div>
            </div>
        {{/canviewdeleted}}
        {{^canviewdeleted}}
            <div class="studentquiz-comment-delete-message">
                {{#ispost}}
                    {{#expanded}}
                        <a class="studentquiz-comment-collapselink" href="#" title="{{#str}} collapsecomment, mod_studentquiz {{/str}}">
                            {{#pix}}switch_minus, mod_studentquiz, {{#str}} collapsecomment, mod_studentquiz {{/str}}{{/pix}}
                        </a>
                        <a class="studentquiz-comment-expandlink" href="#" style="display: none"
                           title="{{#str}} expandcomment, mod_studentquiz {{/str}}">
                            {{#pix}}switch_plus, mod_studentquiz, {{#str}} expandcomment, mod_studentquiz {{/str}}{{/pix}}
                        </a>
                    {{/expanded}}
                    {{^expanded}}
                        <a class="studentquiz-comment-expandlink" href="#" title="{{#str}} expandcomment, mod_studentquiz {{/str}}">
                            {{#pix}}switch_plus, mod_studentquiz, {{#str}} expandcomment, mod_studentquiz {{/str}}{{/pix}}
                        </a>
                    {{/expanded}}
                {{/ispost}}
                <strong>{{#str}} deletedcomment, mod_studentquiz{{/str}}</strong>
                {{#str}} deletedbyauthor, mod_studentquiz, {{deletedtime}} {{/str}}
            </div>
        {{/canviewdeleted}}
    {{/deleted}}
    {{^deleted}}
        <div class="studentquiz-comment-post-outerbox">
            <div class="studentquiz-comment-author">
                <span class="studentquiz-comment-postdate">{{posttime}}</span>
                <span> | </span>
                <a class="studentquiz-comment-author-profile" href="{{authorprofile}}">{{authorname}}</a>
                {{#ispost}}
                    {{#expanded}}
                        <a class="studentquiz-comment-collapselink" href="#" title="{{#str}} collapsecomment, mod_studentquiz {{/str}}">
                            {{#pix}}switch_minus, mod_studentquiz, {{#str}} collapsecomment, mod_studentquiz {{/str}}{{/pix}}
                        </a>
                        <a class="studentquiz-comment-expandlink" href="#" style="display: none" title="{{#str}} expandcomment, mod_studentquiz {{/str}}">
                            {{#pix}}switch_plus, mod_studentquiz, {{#str}} expandcomment, mod_studentquiz {{/str}}{{/pix}}
                        </a>
                    {{/expanded}}
                    {{^expanded}}
                        <a class="studentquiz-comment-expandlink" href="#" title="{{#str}} expandcomment, mod_studentquiz {{/str}}">
                            {{#pix}}switch_plus, mod_studentquiz, {{#str}} expandcomment, mod_studentquiz {{/str}}{{/pix}}
                        </a>
                    {{/expanded}}
                {{/ispost}}
            </div>
            <div class="studentquiz-comment-text">
                {{#expanded}}
                    {{{content}}}
                {{/expanded}}
                {{^expanded}}
                    {{{shortcontent}}}
                {{/expanded}}
            </div>
            <div class="studentquiz-comment-endpost"></div>
        </div>
        <div class="studentquiz-comment-postfooter">
            <div class="studentquiz-comment-commands-box">
                {{#canreport}}
                    <div class="studentquiz-comment-commands-buttons">
                        <a href="{{{reportlink}}}" tabindex="-1">
                            <button class="btn studentquiz-comment-btnreport"
                                    title="{{#str}} reportcomment, mod_studentquiz, {{index}} {{/str}}">
                                {{#str}} reportcomment, mod_studentquiz {{/str}}
                            </button>
                        </a>
                    </div>
                {{/canreport}}
                {{#ispost}}
                    {{#canreply}}
                        <div class="studentquiz-comment-commands-buttons">
                            <button class="btn studentquiz-comment-btnreply"
                                    title="{{#str}} replycomment, mod_studentquiz, {{index}} {{/str}}">
                                {{#str}} replycomment, mod_studentquiz {{/str}}
                            </button>
                        </div>
                    {{/canreply}}
                {{/ispost}}
                {{#candelete}}
                    <div class="studentquiz-comment-commands-buttons">
                        <button class="btn studentquiz-comment-btndelete{{^ispost}}reply{{/ispost}}"
                                title="{{#str}} delete, mod_studentquiz {{/str}}">
                            {{#str}} delete, mod_studentquiz {{/str}}
                        </button>
                    </div>
                {{/candelete}}
                {{#canedit}}
                    <div class="studentquiz-comment-commands-buttons">
                        <a href="#" class="studentquiz-comment-btnedit{{^ispost}}reply{{/ispost}}" role="button"
                           aria-label="{{#str}} editcomment, mod_studentquiz, {{index}} {{/str}}"
                           title="{{#str}} editcomment, mod_studentquiz, {{index}} {{/str}}">
                            {{#pix}} t/editstring, core, {{#str}} editcomment, mod_studentquiz, {{index}} {{/str}} {{/pix}}
                        </a>
                    </div>
                {{/canedit}}
                {{#ispost}}
                    <div class="studentquiz-comment-totalreply">
                        <span class="studentquiz-comment-count-number">
                            {{numberofreply}}
                        </span>
                        <span class="studentquiz-comment-count-text">
                            {{#plural}}
                                {{#str}} replies, mod_studentquiz {{/str}}
                            {{/plural}}
                            {{^plural}}
                                {{#str}} reply, mod_studentquiz {{/str}}
                            {{/plural}}
                        </span>
                    </div>
                {{/ispost}}
            </div>
        </div>
        <div class="studentquiz-comment-postfragmentform">

        </div>
    {{/deleted}}
    {{#ispost}}
        <div class="ipud_post-replies">
            {{#replies}}
                {{>mod_studentquiz/comment}}
            {{/replies}}
        </div>
    {{/ispost}}
</div>
