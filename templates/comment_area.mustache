{{!
    @template mod_studentquiz/comment_area

    Template for rendering in comment area for studentquiz.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none
}}
<div class="studentquiz-comment-container" id="{{id}}">
    <div class="hide error comment_error">{{#str}} comment_error, mod_studentquiz {{/str}}</div>
    <div class="hide error comment_error_unsaved">{{#str}} comment_error_unsaved, mod_studentquiz {{/str}}</div>
    <div class="studentquiz-comment-postform">
        {{{postform}}}
    </div>
    <div class="studentquiz-comment-discussion">
        <div class="studentquiz-comment-discussion-info">
            <div class="studentquiz-comment-groupselector">{{{groupselector}}}</div>
            <div class="studentquiz-comment-expand-section">
                <button class="studentquiz-comment-expand" title="{{#str}} expandall, mod_studentquiz {{/str}}">
                    {{#str}} expandall, mod_studentquiz {{/str}}
                </button>
                <button class="studentquiz-comment-collapse" title="{{#str}} collapseall, mod_studentquiz {{/str}}">
                    {{#str}} collapseall, mod_studentquiz {{/str}}
                </button>
                <span class="studentquiz-comment-postcount"></span>
            </div>
        </div>
    </div>
    <div class="studentquiz-comment-replies"></div>
    <span class="studentquiz-comment-loading" style="display: none">{{#pix}} y/loading, core, {{#str}} loading {{/str}} {{/pix}}</span>
</div>
